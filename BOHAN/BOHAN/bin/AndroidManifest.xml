<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.mioto.bohan"
    android:installLocation="auto"
    android:versionCode="12"
    android:versionName="1.0" >

    <!-- 兼容至4.0版本 -->
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <!-- 友盟4个权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--  -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".BApplication"
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@drawable/icon_bohan"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 主页 -->
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.MainActivity2"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 智能连接页面 -->
        <activity
            android:name=".activity.SmartLinkActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 扫描页面 -->
        <activity
            android:name=".activity.ScanActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 保存信息页面 -->
        <activity
            android:name=".activity.SaveDeviceSettingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 注册页面 -->
        <activity
            android:name=".activity.RegisterActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- ************欢迎页面******************* -->
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登录页面 -->
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- *********设备菜单页面***************************************************** -->
        <activity
            android:name=".activity.MenuDeviceInfoMenuActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 实时数据页面 -->
        <activity
            android:name=".activity.MenuNowDataActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 参数设置页面 -->
        <activity
            android:name=".activity.MenuParaSettingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 定时计量页面 -->
        <activity
            android:name=".activity.MenuSetTimeSetActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 9组时段设置 -->
        <activity
            android:name=".activity.Menu9ONOFFActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 9组时段设置设置时间的页面 -->
        <activity
            android:name=".activity.NineSetSetTimeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 单个用电统计 -->
        <activity
            android:name=".activity.MenuSingleDeviceSumActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 倒计时页面 -->
        <activity
            android:name=".activity.MenuCountDownActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- **************************************************************************** -->
        <!-- 通信测试 -->
        <activity
            android:name=".activity.AAATestActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 忘记密码页面 -->
        <activity
            android:name=".activity.ForgetPwdRegisterActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 重置密码页面 -->
        <activity
            android:name=".activity.ResetPwdActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- BOHAN网页页面 -->
        <activity
            android:name=".activity.WebActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 测试socket -->
        <activity
            android:name=".TestSocketActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 测试选择器 -->
        <activity
            android:name=".TestPickerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>

