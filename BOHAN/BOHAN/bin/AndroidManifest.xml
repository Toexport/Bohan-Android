            android:name=".activity.DeviceBandedActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.CreatQRCodeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_creat_qrcode"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.OnlineStatusActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_online_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.ShareResultActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
