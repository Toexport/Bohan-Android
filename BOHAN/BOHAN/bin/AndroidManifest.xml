        <receiver android:name=".brocast.NetBoardCastReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".RegisterInputPwdActivity"
            android:label="@string/title_activity_register_input_pwd" >
        </activity>

        <service android:name="com.jiemai.bohan.service.TCPAliveService" >
        </service>

        <activity
            android:name=".activity.BindDeviceActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".TestChartActivity"
            android:label="@string/title_activity_test_chart" >
