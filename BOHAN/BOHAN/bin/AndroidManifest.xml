        <!-- 离线设备提示页面 -->
        <activity
            android:name=".activity.OffLineDeviceRemindActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_off_line_device_remind"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 重新进行智能连接页面 -->
        <activity
            android:name=".activity.SmartLinkAgainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_off_line_device_remind"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 测试socket2 -->
        <activity
            android:name=".activity.TestSocketActivity2"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 测试socket Service -->
        <!--
        <service android:name=".service.SocketService" >
        </service>
        -->
        <!-- 测试socketV -->
        <activity
            android:name=".activity.TestVSActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 测试校验码计算 -->
        <activity
            android:name=".CalActivity"
            android:label="@string/title_activity_cal" >
        </activity>
        <activity
            android:name=".TestBrocastActivity"
            android:label="@string/title_activity_test_brocast" >
        </activity>
        <!-- 重新设置设备信息 -->
        <activity
            android:name=".activity.ResetDataActivity"
            android:label="@string/title_activity_reset_data" >
        </activity>
        <activity
            android:name=".TestCircleProgressActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_test_circle_progress"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 操作指南 -->
        <activity
            android:name=".activity.InstructionActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_instruction"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 常见问题 -->
        <activity
            android:name=".activity.FAQActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_faq"
