<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46.5dp" >

        <TextView
            android:id="@+id/tvType"
            style="@style/TVNormalDark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.6"
            android:background="@drawable/selector_white_bg"
            android:gravity="left|center_vertical"
            android:text="日光灯" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1.4"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tvOn"
                style="@style/TVSmallblue"
                android:layout_width="68dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_corner_btn_blueframe_gradual_small_corner"
                android:onClick="onClick"
                android:text="全开" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvOff"
                style="@style/TVSmallblue"
                android:layout_width="68dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_corner_btn_blueframe_gradual_small_corner"
                android:onClick="onClick"
                android:text="全关" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/lineTran3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>