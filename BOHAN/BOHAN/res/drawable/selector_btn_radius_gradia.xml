<?xml version="1.0" encoding="utf-8"?>
<!-- 设置按钮被点击的状态 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <corners android:radius="200dp"></corners>

            <gradient android:angle="90" android:endColor="@color/blueDark" android:startColor="@color/blueDark"></gradient>
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <corners android:radius="200dp"></corners>

            <gradient android:angle="90" android:endColor="@color/blueLight" android:startColor="@color/blueDark"></gradient>
        </shape></item>

</selector>