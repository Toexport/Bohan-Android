<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </LinearLayout>
    <!-- 第一栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp" >

        <!-- 1 -->

        <LinearLayout
            android:id="@+id/llnowTimeData"
            android:onClick="onClick"
            style="@style/menuBG" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_now_data" />

            <TextView
                style="@style/TVSmallDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/real_time_data"></TextView>
        </LinearLayout>

        <!-- 竖线 -->
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/line_color" />
        <!-- 2 -->

        <LinearLayout
            android:id="@+id/llParaSetting"
            android:onClick="onClick"
            style="@style/menuBG" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_setting" />

            <TextView
                style="@style/TVSmallDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/value_added_services" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/line_color" />
        <!-- 3 -->

        <LinearLayout
            android:id="@+id/llTimeCount"
            android:onClick="onClick"
            style="@style/menuBG" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_settime_setting" />

            <TextView
                style="@style/TVSmallDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/counting" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />
    <!-- 第二栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp" >

        <!-- 1 -->

        <LinearLayout
            android:id="@+id/llDurTime"
            android:onClick="onClick"
            style="@style/menuBG" >

            <ImageView
                style="@style/TVSmallDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/menu_time_dur" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/period" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/line_color" />
        <!-- 2 -->

        <LinearLayout
            android:id="@+id/llBackTime"
            android:onClick="onClick"
            style="@style/menuBG" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_countdown" />

            <TextView
                style="@style/TVSmallDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/countdown" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/line_color" />
        <!-- 3 -->

        <LinearLayout
            android:id="@+id/llPowerSum"
            android:onClick="onClick"
            style="@style/menuBG" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_summery" />

            <TextView
                style="@style/TVSmallDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/info" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/lineTran" />

</LinearLayout>
